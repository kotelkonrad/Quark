{
    "multipart": [
        {   "apply": { "model": "%modid%:block/%name%_post" }},
        {   "when": { "north": true },
            "apply": { "model": "%modid%:block/%name%_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "%modid%:block/%name%_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "%modid%:block/%name%_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "%modid%:block/%name%_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "%modid%:block/%name%_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "%modid%:block/%name%_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "%modid%:block/%name%_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "%modid%:block/%name%_noside", "y": 270 }
        }
    ]
}
